<Window x:Class="IrisAuth.Views.BiometricEnrollDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource BaseDialogWindowStyle}"
        WindowStartupLocation="CenterOwner"
        Width="440"
        Height="580"
        Background="Transparent">

    <!-- ROOT CARD (SAFE FOR ANIMATION) -->
    <Border x:Name="RootDialog"
            Style="{StaticResource DialogCardStyle}"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">

        <Border.RenderTransform>
            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
        </Border.RenderTransform>

        <!-- OPEN ANIMATION -->
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.25"/>

                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                            To="1"
                            Duration="0:0:0.25"/>

                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                            To="1"
                            Duration="0:0:0.25"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <!-- ================= CONTENT ================= -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel>
                <TextBlock Text="Biometric Enrollment"
                           FontSize="20"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Capture left and right eye biometrics"
                           FontSize="12"
                           Foreground="#6B7280"/>
            </StackPanel>

            <!-- BODY -->
            <StackPanel Grid.Row="1"
                        Margin="0,18,0,0">

                <!-- ERROR -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#DC2626"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                <!-- LEFT EYE -->
                <TextBlock Text="Left Eye"
                           FontWeight="SemiBold"/>

                <Button Content="📷 Capture Left Eye"
                        Command="{Binding CaptureLeftCommand}"
                        Margin="0,6,0,6"/>

                <Border Height="120"
                        Background="#F3F4F6"
                        CornerRadius="8"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1">

                    <Image Source="{Binding LeftPreview}"
                           Stretch="Uniform"/>
                </Border>

                <TextBlock Text="{Binding LeftQualityText}"
                           FontSize="12"
                           Margin="0,4,0,14"/>

                <!-- RIGHT EYE -->
                <TextBlock Text="Right Eye"
                           FontWeight="SemiBold"/>

                <Button Content="📷 Capture Right Eye"
                        Command="{Binding CaptureRightCommand}"
                        Margin="0,6,0,6"/>

                <Border Height="120"
                        Background="#F3F4F6"
                        CornerRadius="8"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1">

                    <Image Source="{Binding RightPreview}"
                           Stretch="Uniform"/>
                </Border>

                <TextBlock Text="{Binding RightQualityText}"
                           FontSize="12"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">

                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"
                        Command="{Binding CancelCommand}"/>

                <Button Content="Save"
                        Style="{StaticResource PrimaryButton}"
                        IsEnabled="{Binding CanSave}"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
