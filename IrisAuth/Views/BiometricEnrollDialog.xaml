<Window x:Class="IrisAuth.Views.BiometricEnrollDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Biometric Enrollment"
        Height="520"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <StackPanel Margin="20">

        <TextBlock Text="Biometric Enrollment"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>

        <Button Content="Capture Left Eye"
                Command="{Binding CaptureLeftCommand}"
                Margin="0,0,0,5"/>

        <Image Source="{Binding LeftPreview}"
               Height="120"
               Margin="0,0,0,5"/>

        <TextBlock Text="{Binding LeftQualityText}"
                   Margin="0,0,0,10"/>

        <Button Content="Capture Right Eye"
                Command="{Binding CaptureRightCommand}"
                Margin="0,0,0,5"/>

        <Image Source="{Binding RightPreview}"
               Height="120"
               Margin="0,0,0,5"/>

        <TextBlock Text="{Binding RightQualityText}"
                   Margin="0,0,0,15"/>

        <Button Content="Save"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding CanSave}"
                HorizontalAlignment="Right"
                Width="100"/>
    </StackPanel>
</Window>