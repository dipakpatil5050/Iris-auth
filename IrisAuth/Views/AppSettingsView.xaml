        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="Track"
                            Width="44" Height="22"
                            CornerRadius="11"
                            Background="#D1D5DB">
                                <Ellipse x:Name="Thumb"
                                 Width="18" Height="18"
                                 Fill="White"
                                 Margin="2"/>
                            </Border>

                            <ContentPresenter Margin="12,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <ControlTemplate.Triggers>

                            <!-- CHECKED -->
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ThicknessAnimation Storyboard.TargetName="Thumb"
                                                         Storyboard.TargetProperty="Margin"
                                                         To="24,2,2,2"
                                                         Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="Track"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#6B3BFF"
                                                    Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <!-- UNCHECKED -->
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ThicknessAnimation Storyboard.TargetName="Thumb"
                                                         Storyboard.TargetProperty="Margin"
                                                         To="2,2,2,2"
                                                         Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="Track"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#D1D5DB"
                                                    Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- TextBox -->
        <Style x:Key="Textbox" TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Save Button -->
        <Style x:Key="SaveButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Background" Value="#6B3BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <!-- ================= CONTENT ================= -->
    <ScrollViewer Padding="24">
        <StackPanel Width="720">

            <TextBlock Text="Application Settings"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Margin="0,0,0,24"/>

            <!-- GENERAL -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <CheckBox Content="Allow Local Biometric Upload"
                              ToolTip="Store biometric data locally"
                              Style="{StaticResource ToggleSwitch}"
                              FontWeight="SemiBold"
                              IsChecked="{Binding Settings.AllowLocalBiometricUpload}"/>

                    <CheckBox Content="Enable Windows Group Creation"
                              ToolTip="Create Windows groups automatically"
                              Style="{StaticResource ToggleSwitch}"
                              FontWeight="SemiBold"
                              IsChecked="{Binding Settings.EnableGroupCreation}"/>

                    <CheckBox Content="Enable Windows User Creation"
                              ToolTip="Create Windows users automatically"
                              Style="{StaticResource ToggleSwitch}"
                              FontWeight="SemiBold"
                              IsChecked="{Binding Settings.EnableUserCreation}"/>
                </StackPanel>
            </Border>

            <!-- USER DEFAULTS -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Group Prefix"
                           FontWeight="SemiBold"/>                    
                    <TextBox Style="{StaticResource Textbox}"
                             ToolTip="Prefix for created Windows groups"
                             Text="{Binding Settings.GroupPrefix}"/>
                    <TextBlock Text="User Prefix"
                           FontWeight="SemiBold"/>
                    <TextBox Style="{StaticResource Textbox}"
                             ToolTip="Prefix for created Windows users"
                             Text="{Binding Settings.UserPrefix}"/>
                    <TextBlock Text="Group Description"
                           FontWeight="SemiBold"/>
                    <TextBox Style="{StaticResource Textbox}"
                             ToolTip="Group Description"
                             Text="{Binding Settings.GroupDescription}"/>
                    <TextBlock Text="User Description"
                           FontWeight="SemiBold"/>
                    <TextBox Style="{StaticResource Textbox}"
                             ToolTip="User Description"
                             Text="{Binding Settings.UserDescription}"/>
                    <TextBlock Text="Default password for new users"
                           FontWeight="SemiBold"/>
                    <TextBox Style="{StaticResource Textbox}"
                             ToolTip="Default password for new users"
                             Text="{Binding Settings.DefaultUserPassword}"/>

                    <CheckBox Content="Force password change on first login"
                              Style="{StaticResource ToggleSwitch}"
                              FontWeight="SemiBold"
                              IsChecked="{Binding Settings.ForcePasswordChange}"/>

                    <CheckBox Content="Auto add user to group"
                              Style="{StaticResource ToggleSwitch}"
                              FontWeight="SemiBold"
                              IsChecked="{Binding Settings.AutoAddUserToGroup}"/>
                </StackPanel>
            </Border>

            <!-- MODE --><!--
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Mode"
                           FontWeight="SemiBold"/>
                    <ComboBox Width="220"
                              SelectedValue="{Binding Settings.Mode}"
                              SelectedValuePath="Content">
                        <ComboBoxItem Content="Local"/>
                        <ComboBoxItem Content="Domain"/>
                    </ComboBox>
                    <TextBlock Text="DOMAIN Name"
                           FontWeight="SemiBold"/>
                    <TextBox Style="{StaticResource Textbox}"
                             ToolTip="Active Directory domain name"
                             IsEnabled="{Binding Settings.IsDomainMode}"
                             Opacity="{Binding Settings.IsDomainMode, FallbackValue=0.5}"
                             Text="{Binding Settings.DomainName}"/>
                </StackPanel>
            </Border>-->
            <!-- MODE -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Security Mode" FontWeight="SemiBold"/>

                    <ComboBox Width="220"
                              SelectedValue="{Binding Settings.Mode}"
                              SelectedValuePath="Content">
                        <ComboBoxItem Content="Local"/>
                        <ComboBoxItem Content="Domain"/>
                    </ComboBox>

                    <!-- DOMAIN ONLY -->
                    <StackPanel Margin="0,12,0,0"
                                Visibility="{Binding Settings.IsDomainMode,
                                             Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Domain Name" FontWeight="SemiBold"/>
                        <TextBox Style="{StaticResource Textbox}"
                             ToolTip="Active Directory domain"
                             Text="{Binding Settings.DomainName}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!-- SAVE -->

            <Button Content="Save Settings"
                    Style="{StaticResource SaveButton}"
                     BorderThickness="0"
                     Foreground="White"
                     FontSize="12"
                     FontFamily="Montserrat"
                     Cursor="Hand"                           
                     Margin="0,30,0,0"
                    IsEnabled="{Binding CanEditSettings}"
                    Command="{Binding SaveCommand}"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>

