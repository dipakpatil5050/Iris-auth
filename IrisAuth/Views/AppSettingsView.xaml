                                 Height="18"
                                 Margin="2"
                                 Fill="White"/>
                            </Border>

                            <ContentPresenter Margin="10,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder"
                                Property="Background"
                                Value="#6B3BFF"/>
                                <Setter TargetName="SwitchThumb"
                                Property="Margin"
                                Value="22,2,2,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        --><!-- Save button --><!--
        <Style x:Key="SaveButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Background" Value="#6B3BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </UserControl.Resources>

    --><!-- ================= LAYOUT ================= --><!--
    <Grid Margin="20">
        <Border Background="White"
                BorderBrush="#DEE4EC"
                BorderThickness="1"
                CornerRadius="10"
                Padding="24">

            <ScrollViewer VerticalScrollBarVisibility="Auto">

                <StackPanel>

                    --><!-- HEADER --><!--
                    <TextBlock Text="Application Settings"
                               Style="{StaticResource SectionTitle}"/>

                    --><!-- ===== GENERAL ===== --><!--
                    <CheckBox Content="Allow Local Biometric Upload"
                              Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="{Binding Settings.AllowLocalBiometricUpload}"/>

                    <CheckBox Content="Enable Windows Group Creation"
                              Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="{Binding Settings.EnableGroupCreation}"/>

                    <CheckBox Content="Enable Windows User Creation"
                              Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="{Binding Settings.EnableUserCreation}"/>

                    --><!-- ===== PREFIXES ===== --><!--
                    <TextBlock Text="Group Prefix" Style="{StaticResource FormLabel}"/>
                    <TextBox Style="{StaticResource FormTextbox}"
                             Text="{Binding Settings.GroupPrefix}"/>

                    <TextBlock Text="User Prefix" Style="{StaticResource FormLabel}"/>
                    <TextBox Style="{StaticResource FormTextbox}"
                             Text="{Binding Settings.UserPrefix}"/>

                    --><!-- ===== PASSWORD ===== --><!--
                    <TextBlock Text="Default User Password"
                               Style="{StaticResource FormLabel}"/>
                    <TextBox Style="{StaticResource FormTextbox}"
                             Text="{Binding Settings.DefaultUserPassword}"/>

                    <CheckBox Content="Force Password Change on First Login"
                              Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="{Binding Settings.ForcePasswordChange}"/>

                    <CheckBox Content="Auto Add User to Group"
                              Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="{Binding Settings.AutoAddUserToGroup}"/>

                    --><!-- ===== MODE ===== --><!--
                    <TextBlock Text="Security Mode"
                               FontWeight="SemiBold"
                               Margin="0,10,0,2"/>
                    <ComboBox Width="200"
                             Style="{StaticResource FormComboBox}"
                             SelectedValue="{Binding Settings.Mode}"
                             SelectedValuePath="Content">
                             <ComboBoxItem Content="Local"/>
                             <ComboBoxItem Content="Domain"/>
                    </ComboBox>
                    <TextBlock Text="Domain Name"
                                Style="{StaticResource FormLabel}"
                                 IsEnabled="{Binding Settings.IsDomainMode}"/>
                    <TextBox Style="{StaticResource FormTextbox}"
                             Width="300"
                             Text="{Binding Settings.DomainName}"
                             IsEnabled="{Binding Settings.IsDomainMode}"/>

                    --><!-- SAVE --><!--
                    <Button Content="Save Settings"
                            Margin="0,25,0,0"
                            Style="{StaticResource SaveButton}"
                            Command="{Binding SaveCommand}"/>

                </StackPanel>

            </ScrollViewer>
        </Border>
    </Grid>
