<Window x:Class="IrisAuth.Views.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource BaseDialogWindowStyle}"
        WindowStartupLocation="CenterOwner"
        Width="440"
        Height="460"
        Background="Transparent">

    <!-- ROOT CARD (SAFE FOR ANIMATION) -->
    <Border x:Name="RootDialog"
            Style="{StaticResource DialogCardStyle}"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">

        <Border.RenderTransform>
            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
        </Border.RenderTransform>

        <!-- OPEN ANIMATION -->
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.25"/>

                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                            To="1"
                            Duration="0:0:0.25"/>

                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                            To="1"
                            Duration="0:0:0.25"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <!-- ================= CONTENT ================= -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel>
                <TextBlock Text="{Binding DialogTitle}"
                           FontSize="20"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Create or update user details"
                           FontSize="12"
                           Foreground="#6B7280"/>
            </StackPanel>

            <!-- BODY -->
            <StackPanel Grid.Row="1"
                        Margin="0,18,0,0">

                <!-- USERNAME -->
                <TextBlock Text="Username"
                           FontWeight="SemiBold"/>

                <TextBox Text="{Binding Username}"
                         Height="34"
                         Padding="10"
                         Margin="0,6,0,12"/>

                <!-- PASSWORD -->
                <TextBlock Text="Password"
                           FontWeight="SemiBold"/>

                <PasswordBox x:Name="PwdBox"
                             Height="34"
                             Padding="10"
                             Margin="0,6,0,12"/>

                <!-- GROUP -->
                <TextBlock Text="Group"
                           FontWeight="SemiBold"/>

                <ComboBox ItemsSource="{Binding Groups}"
                          SelectedValue="{Binding GroupId}"
                          DisplayMemberPath="GroupName"
                          SelectedValuePath="GroupId"
                          Height="34"
                          Margin="0,6,0,14"/>

                <!-- BIOMETRIC -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,10,0,0">

                    <TextBlock Text="🧬 Enable Biometric"
                               Width="160"
                               VerticalAlignment="Center"/>

                    <CheckBox Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="{Binding IsBiometricEnabled}"/>
                </StackPanel>

                <!-- ERROR -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#DC2626"
                           FontSize="12"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">

                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"
                        Command="{Binding CancelCommand}"/>

                <Button Content="Save"
                        Style="{StaticResource PrimaryButton}"
                        IsDefault="True"
                        Click="Save_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
