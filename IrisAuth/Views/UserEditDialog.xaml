<Window x:Class="IrisAuth.Views.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User"
        Height="420"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding DialogTitle}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1">

            <TextBlock Text="Username"/>
            <TextBox Text="{Binding Username}" Margin="0,5,0,10"/>

            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PwdBox" Margin="0,5,0,10"/>

            <TextBlock Text="Group"/>
            <ComboBox ItemsSource="{Binding Groups}"
                      SelectedValue="{Binding GroupId}"
                      DisplayMemberPath="GroupName"
                      SelectedValuePath="GroupId"
                      Margin="0,5,0,10"/>

            <CheckBox Content="Enable Biometric"
                      IsChecked="{Binding IsBiometricEnabled}"
                      Margin="0,10,0,0"/>

        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Cancel"
                    Width="80"
                    Margin="0,0,10,0"
                    Command="{Binding CancelCommand}"/>

            <Button Content="Save"
                    Width="80"
                    IsDefault="True"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
