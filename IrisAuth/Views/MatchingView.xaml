<UserControl x:Class="IrisAuth.Views.MatchingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#DDDDDD">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Main Section -->
            <RowDefinition Height="*"/>
            <!-- Bottom Panel -->
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <TextBlock Grid.Row="0"
                   Text="Iris Authentication Matching"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#428BCA"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <!-- ================= MAIN SECTION ================= -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== LEFT PANEL ===== -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Timeout(Seconds)"
                               FontWeight="Bold"
                               Width="140"
                               VerticalAlignment="Center"/>
                    <TextBox Width="120"
                             Height="24"
                             Text="50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Select Image Type"
                               FontWeight="Bold"
                               Width="140"
                               VerticalAlignment="Center"/>
                    <ComboBox Width="160" Height="24">
                        <ComboBoxItem Content="Select"/>
                        <ComboBoxItem Content="BMP"/>
                        <ComboBoxItem Content="RAW"/>
                        <ComboBoxItem Content="K3"/>
                        <ComboBoxItem Content="K7"/>
                    </ComboBox>
                </StackPanel>

                <!-- Buttons Row 1 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="Get Info"
                            Width="100"
                            Height="30"
                            Margin="0,0,10,0"
                            Style="{StaticResource addButton}"/>
                    <Button Content="Capture"
                            Width="100"
                            Height="30"
                            Style="{StaticResource GhostButton}"/>
                </StackPanel>

                <!-- Buttons Row 2 -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="Get Image"
                            Width="100"
                            Height="30"
                            Margin="0,0,10,0"
                            Style="{StaticResource gridEditButton}"/>
                    <Button Content="Capture &amp; Match"
                            Width="150"
                            Height="30"
                            Margin="0,0,10,0"
                            Style="{StaticResource addButton}"/>
                    <Button Content="Match"
                            Width="100"
                            Height="30"
                            Style="{StaticResource GhostButton}"/>
                </StackPanel>

            </StackPanel>

            <!-- ===== CENTER IMAGE ===== -->
            <Border Grid.Column="1"
                    Width="260"
                    Height="190"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="4"
                    Background="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
                <Image Stretch="Uniform"
                       Margin="5"
                       ToolTip="Iris Image"/>
            </Border>

            <!-- ===== RIGHT DEVICE INFO ===== -->
            <Grid Grid.Column="2" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Serial No:"/>
                <TextBlock Grid.Column="1"/>

                <TextBlock Grid.Column="2" Text="System ID:"/>
                <TextBlock Grid.Column="3"/>

                <TextBlock Grid.Row="1" Text="Make:"/>
                <TextBlock Grid.Row="1" Grid.Column="1"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="Model:"/>
                <TextBlock Grid.Row="1" Grid.Column="3"/>

                <TextBlock Grid.Row="2" Text="Width:"/>
                <TextBlock Grid.Row="2" Grid.Column="1"/>

                <TextBlock Grid.Row="2" Grid.Column="2" Text="Height:"/>
                <TextBlock Grid.Row="2" Grid.Column="3"/>
            </Grid>
        </Grid>

        <!-- ================= BOTTOM PANEL ================= -->
        <Border Grid.Row="2"
        Background="White"
        CornerRadius="4"
        Padding="15">

            <Grid>
                <!-- Add spacing between rows -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Status -->
                <TextBlock Grid.Row="0"
                   Text="Status:"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"/>

                <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Height="26"
                 Padding="6,2"
                 IsReadOnly="True"/>

                <!-- Quality -->
                <TextBlock Grid.Row="2"
                   Text="Quality:"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"/>

                <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Height="26"
                 Padding="6,2"
                 IsReadOnly="True"/>

                <!-- Base64 -->
                <TextBlock Grid.Row="4"
                   Text="Base64 Encoded Image Data"
                   VerticalAlignment="Top"
                   FontWeight="SemiBold"/>

                <TextBox Grid.Row="4"
                 Grid.Column="1"
                 Height="70"
                 Padding="6"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"/>

                <!-- Template -->
                <TextBlock Grid.Row="6"
                   Text="Template for matching"
                   VerticalAlignment="Top"
                   FontWeight="SemiBold"/>

                <TextBox Grid.Row="6"
                 Grid.Column="1"
                 Height="70"
                 Padding="6"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Border>


    </Grid>

    <!-- ================= STYLES ================= -->
    <UserControl.Resources>
        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#428BCA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#357EBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

</UserControl>
