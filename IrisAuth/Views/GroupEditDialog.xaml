<Window x:Class="IrisAuth.Views.GroupEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource BaseDialogWindowStyle}"
        WindowStartupLocation="CenterOwner"
        Width="460"
        Height="480"
        Background="Transparent">

    <!-- ================= ROOT CONTAINER ================= -->
    <Border x:Name="RootDialog"
            Style="{StaticResource DialogCardStyle}"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">

        <!-- ✅ SAFE PLACE FOR TRANSFORM -->
        <Border.RenderTransform>
            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
        </Border.RenderTransform>

        <!-- OPEN ANIMATION -->
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>

                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.25"/>

                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                            To="1"
                            Duration="0:0:0.25"/>

                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                            To="1"
                            Duration="0:0:0.25"/>

                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <!-- ================= CONTENT ================= -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel>
                <TextBlock Text="{Binding DialogTitle}"
                           FontSize="20"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Configure group permissions"
                           FontSize="12"
                           Foreground="#6B7280"/>
            </StackPanel>

            <!-- BODY -->
            <StackPanel Grid.Row="1" Margin="0,18,0,0">

                <TextBlock Text="Group Name"
                           FontWeight="SemiBold"/>

                <TextBox Text="{Binding GroupName}"
                         Height="34"
                         Padding="10"
                         Margin="0,6,0,14"
                         />
                
                    <!-- Auto Logout / LoginType-->
                <TextBlock Text="Auto Logout"
                      FontWeight="SemiBold"/>

                     <ComboBox Height="34"
                          Margin="0,6,0,14"
                          SelectedValuePath="Tag"
                          SelectedValue="{Binding LoginType}">      
                    <ComboBoxItem Content="Off" Tag="1"/>
                    <ComboBoxItem Content="Absolute" Tag="2"/>
                    <ComboBoxItem Content="InActive" Tag="3"/>
                </ComboBox>

                <!-- Login Timeout  -->

                <TextBlock Text="Time"
                    FontWeight="SemiBold"/>

                <TextBox Text="{Binding LoginTimeout}"
                          Height="34"
                          Padding="10"
                          IsEnabled="{Binding IsLoginTimeoutEnabled}"
                         />            

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#DC2626"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">

                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"
                        Command="{Binding CancelCommand}"/>

                <Button Content="Save"
                        Style="{StaticResource PrimaryButton}"
                        IsDefault="True"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
