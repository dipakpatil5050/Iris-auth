<Window x:Class="IrisAuth.Views.GroupEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource BaseDialogWindowStyle}"
        WindowStartupLocation="CenterOwner"
        Width="460"
        Height="480"
        Background="Transparent">

    <!-- ================= ROOT CONTAINER ================= -->
    <Border x:Name="RootDialog"
            Style="{StaticResource DialogCardStyle}"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">

        <!-- ✅ SAFE PLACE FOR TRANSFORM -->
        <Border.RenderTransform>
            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
        </Border.RenderTransform>

        <!-- OPEN ANIMATION -->
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>

                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.25"/>

                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                            To="1"
                            Duration="0:0:0.25"/>

                        <DoubleAnimation
                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                            To="1"
                            Duration="0:0:0.25"/>

                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <!-- ================= CONTENT ================= -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel>
                <TextBlock Text="{Binding DialogTitle}"
                           FontSize="20"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Configure group permissions"
                           FontSize="12"
                           Foreground="#6B7280"/>
            </StackPanel>

            <!-- BODY -->
            <StackPanel Grid.Row="1" Margin="0,18,0,0">

                <TextBlock Text="Group Name"
                           FontWeight="SemiBold"/>

                <TextBox Text="{Binding GroupName}"
                         Height="34"
                         Padding="10"/>

                <TextBlock Text="Permissions"
                           FontWeight="SemiBold"
                           Margin="0,14,0,8"/>

                <UniformGrid Columns="2">

                    <StackPanel Orientation="Horizontal" Margin="6">
                        <TextBlock Text="👁 View" Width="90"/>
                        <CheckBox Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="{Binding Permission1}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="6">
                        <TextBlock Text="✏ Edit" Width="90"/>
                        <CheckBox Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="{Binding Permission2}"/>
                    </StackPanel>

                </UniformGrid>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#DC2626"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">

                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"
                        Command="{Binding CancelCommand}"/>

                <Button Content="Save"
                        Style="{StaticResource PrimaryButton}"
                        IsDefault="True"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
