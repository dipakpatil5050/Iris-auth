<Window x:Class="IrisAuth.Views.GroupEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group"
        Height="420"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="{Binding DialogTitle}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

        <!-- CONTENT -->
        <StackPanel Grid.Row="1">

            <TextBlock Text="Group Name"/>
            <TextBox Text="{Binding GroupName}"
                     Margin="0,0,0,12"/>

            <TextBlock Text="Permissions"
                       FontWeight="SemiBold"
                       Margin="0,10,0,6"/>

            <UniformGrid Columns="2">
                <CheckBox Content="Permission 1" IsChecked="{Binding Permission1}"/>
                <CheckBox Content="Permission 2" IsChecked="{Binding Permission2}"/>
                <CheckBox Content="Permission 3" IsChecked="{Binding Permission3}"/>
                <CheckBox Content="Permission 4" IsChecked="{Binding Permission4}"/>
                <CheckBox Content="Permission 5" IsChecked="{Binding Permission5}"/>
                <CheckBox Content="Permission 6" IsChecked="{Binding Permission6}"/>
            </UniformGrid>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       Margin="0,10,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- FOOTER -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Cancel"
                    Width="90"
                    Margin="0,0,10,0"
                    Command="{Binding CancelCommand}"/>

            <Button Content="Save"
                    Width="90"
                    IsDefault="True"
                    Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>