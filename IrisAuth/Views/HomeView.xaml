<UserControl x:Class="IrisAuth.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#F4F6FA"
             d:DesignHeight="650"
             d:DesignWidth="1000">

    <!-- ================= RESOURCES ================= -->
    <UserControl.Resources>

        <!-- Stat Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="BorderBrush" Value="#E4E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="14"
                Padding="24"
                BorderBrush="#E4E8F0"
                BorderThickness="1"
                Margin="0,0,0,24">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Welcome back 👋"
                               FontSize="14"
                               Foreground="#6B7280"/>

                    <TextBlock Text="Iris Authentication Dashboard"
                               FontSize="26"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,6,0,0"/>

                    <TextBlock Text="Monitor users, security activity, and system health"
                               FontSize="13"
                               Foreground="#6B7280"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Right">
                    <TextBlock x:Name="txtDate"
                               FontSize="14"
                               Foreground="#374151"/>
                    <TextBlock x:Name="txtTime"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#6366F1"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ================= CONTENT ================= -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- STAT CARDS -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="Total Users" Foreground="#6B7280"/>
                        <TextBlock Text="128" FontSize="30" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="Active Users" Foreground="#6B7280"/>
                        <TextBlock Text="102" FontSize="30" FontWeight="SemiBold" Foreground="#16A34A"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="Blocked Users" Foreground="#6B7280"/>
                        <TextBlock Text="6" FontSize="30" FontWeight="SemiBold" Foreground="#DC2626"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Today Logins" Foreground="#6B7280"/>
                        <TextBlock Text="43" FontSize="30" FontWeight="SemiBold" Foreground="#6366F1"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- RECENT ACTIVITY -->
            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="14"
                    Padding="20"
                    BorderBrush="#E4E8F0"
                    BorderThickness="1">

                <StackPanel>
                    <TextBlock Text="Recent Activity"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="• User Admin2 created"/>
                    <TextBlock Text="• User Admin unblocked"/>
                    <TextBlock Text="• User Smith blocked"/>
                    <TextBlock Text="• Administrator group created"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
